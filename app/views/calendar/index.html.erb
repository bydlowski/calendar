<div class="section group">
	<div class="col span_3_of_4 calendar-main">	
		<div class="section group">
			<div class="col span_2_of_5 titles">
				<h1 style="margin: 0 0.2em;">Calendar</h1>
			</div>
			<div class="col span_2_of_5 titles dates-main ">
				<%= dates_method(@month, @year, @holidays).html_safe %>
			</div>
			<div class="col span_1_of_5 titles title-city">
				<p><%= "City: #{@city}" %><br /><%=  link_to "Mudar cidade", logout_path(city: 'logout') %></p>
			</div>
		</div>
		<%= calendar_method(@month, @year, @holidays).html_safe %>
	</div>
	<div class="col span_1_of_4 sidebar-main">
		<%= holidays_div_method(@holidays).html_safe %>
		<div class="review">
			<h2>Pr√≥ximos anos</h2>
			<div class='year active'><%= link_to "2016", from_category_path(this_year: 2016, holiday: @holidays, city: @city), :method => :post, :remote => true %></div>
			<div class='year'><%= link_to "2017", from_category_path(this_year: 2017, holiday: @holidays, city: @city), :method => :post, :remote => true %></div>
			<div class='year'><%= link_to "2018", from_category_path(this_year: 2018, holiday: @holidays, city: @city), :method => :post, :remote => true %></div>
			<div class='year'><%= link_to "2019", from_category_path(this_year: 2019, holiday: @holidays, city: @city), :method => :post, :remote => true %></div>
			<div class='year'><%= link_to "2020", from_category_path(this_year: 2020, holiday: @holidays, city: @city), :method => :post, :remote => true %></div>
			<div id="from_category">
				<%= year_review_method(2016, @holidays).html_safe %>
			</div>
		</div>
	</div>
</div>

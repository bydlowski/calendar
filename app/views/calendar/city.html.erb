<h1>Choose city</h1>
<%= form_for ('calendar_city_path') do |form| %>
	<p>
	<%= form.label 'Selecione uma cidade'  %>:
	<%= form.radio_button :city, 'n, Nenhuma' %>
	<%= form.label :city, 'Nenhuma' %>
	<%= form.radio_button :city, 'belohorizonte, Belo Horizonte' %>
	<%= form.label :city, 'Belo Horizonte'  %>
	<%= form.radio_button :city, 'portoalegre, Porto Alegre' %>
	<%= form.label :city, 'Porto Alegre' %>
  <%= form.radio_button :city, 'riodejaneiro, Rio de Janeiro' %>
	<%= form.label :city, 'Rio de Janeiro'%>
	<%= form.radio_button :city, 'saopaulo, São Paulo' %>
	<%= form.label :city, 'São Paulo' %>
	</p>
	<%= form.submit "OK" %>
<% end %>